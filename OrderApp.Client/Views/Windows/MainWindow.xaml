<Window x:Class="OrderApp.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderApp.Client"
        xmlns:vm="clr-namespace:OrderApp.Client.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Path=Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Заказы">

        </GroupBox>
        <GroupBox Grid.Column="1" Header="Информация о заказе">
            <DataGrid>
                
            </DataGrid>
        </GroupBox>
        <Button Content="Создать заказ" HorizontalAlignment="Center" Height="39" Margin="0,369,0,0" VerticalAlignment="Top" Width="142"/>
        <Button Content="Получить файл списка заказов" HorizontalAlignment="Left" Height="39" Margin="371,369,0,0" VerticalAlignment="Top" Width="142" Grid.Column="1"/>
    </Grid>
</Window>
